@{
    Layout = "~/Views/WeddingPlanners/_WeddingLayout.cshtml";
    ViewData["Title"] = "Wedding Planner Dashboard";
}

<h4 class="mt-2 mb-4 text-start fw-bold y">Welcome, @User.Identity.Name! </h4>

<div class="row g-4">

    <!-- Wedding Stats Card -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card shadow-lg border-0 rounded-4 bg-black text-white" style="height: 100%;">
            <div class="card-body d-flex flex-column justify-content-between">
                <i class="bi bi-calendar-heart-fill fs-3 fs-3 mb-3"></i>
                <div>
                    <h5 class="fw-bold mb-3 text-center">Wedding Stats</h5>
                    <div class="mb-2">
                        <small class="text-light">Total Weddings</small>
                        <div class="fs-4 fw-semibold">@ViewData["WeddingCount"]</div>
                    </div>
                    <div>
                        <small class="text-light">Average Budget</small>
                        <div class="fs-5 fw-semibold">$@String.Format("{0:N0}", ViewData["AvgBudget"])</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Deadlines Card -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card shadow-lg border-0 rounded-4 bg-black text-white" style="height: 100%;">
            <div class="card-body d-flex flex-column justify-content-between text-center">
                <i class="bi bi-clock-fill fs-3 mb-3"></i>
                <h5 class="fw-bold mb-3">Next Task</h5>
                <div class="mb-2">
                  
                    <div class="h5">@ViewData["NextTask"]</div>
                </div>
               
            </div>
        </div>
    </div>

    <!-- Task Overview Card -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card shadow-lg border-0 rounded-4 bg-black text-white" style="height: 100%;">
            <div class="card-body d-flex flex-column justify-content-between text-center">
                <i class="bi bi-list-task fs-3 mb-3"></i>
                <h5 class="fw-bold mb-3">Task Overview</h5>
                <div class="d-flex justify-content-around text-black">
                    <div>
                        <div class="text-white small">✅ Completed</div>
                        <div class="h5 text-white">@ViewData["CompletedTasks"]</div>
                    </div>
                    <div>
                        <div class="text-white small">⏳ Pending</div>
                        <div class="h5 text-white">@ViewData["PendingTasks"]</div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@model WeddingPlannerApplication.Models.WeddingTimeline
@using Microsoft.AspNetCore.Identity
@using DreamDayWeddingPlanner.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "~/Views/WeddingPlanners/_WeddingLayout.cshtml";
    ViewData["Title"] = "Create Timeline Event";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 bg-white">
                <div class="card-header bg-transparent border-0 text-center pb-0">
                    <h2 class="fw-bold text-muted" style="font-family: 'Segoe UI', sans-serif;">Create a New Timeline Event</h2>
                    <p class="text-muted small">Plan every moment of your couple’s big day</p>
                </div>
                <div class="card-body p-4">

                    <form asp-action="CreateTimeline" method="post" class="needs-validation" novalidate>
                        <input type="hidden" name="CoupleId" value="@ViewBag.CoupleId" />

                        <div class="form-floating mb-4">
                            <input type="text" class="form-control rounded-3" id="EventName" name="EventName" placeholder="Event Name" required />
                            <label for="EventName">Event Name</label>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea class="form-control rounded-3" id="EventDescription" name="EventDescription" placeholder="Event Description" style="height: 120px;" required></textarea>
                            <label for="EventDescription">Description</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="datetime-local" class="form-control rounded-3" id="EventTime" name="EventTime" required />
                            <label for="EventTime">Event Date & Time</label>
                        </div>

                        <button type="submit" class="btn w-100 py-2 text-white fs-5 rounded-pill" style="background: linear-gradient(to right, #b983ff, #a86bfa); border: none;">
                            Create Event
                        </button>
                    </form>


                </div>
            </div>
        </div>
    </div>
    <a asp-action="ViewWeddingTimeline" asp-route-coupleId="@ViewBag.CoupleId" class="btn btn-secondary">Back</a>

</div>

<style>
    body {
        background-color: #fdf8ff;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        background-color: #fffdfd;
        box-shadow: 0 0 20px rgba(185, 131, 255, 0.1);
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #d3a4ff;
        box-shadow: 0 0 0 0.2rem rgba(185, 131, 255, 0.2);
    }
</style>

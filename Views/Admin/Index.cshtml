@{
    ViewData["Title"] = "Booking Report";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-info shadow-sm">
            <div class="card-body d-flex flex-column justify-content-center">
                <h5 class="card-title text-center">Total Booking</h5>
                <h3 class="text-center">@ViewBag.TotalBookings</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning shadow-sm">
            <div class="card-body d-flex flex-column justify-content-center">
                <h5 class="card-title text-center">Total Revenue</h5>
                <h3 class="text-center">@ViewBag.TotalRevenue</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body d-flex flex-column justify-content-center">
                <h5 class="card-title text-center">Pending Payments</h5>
                <h3 class="text-center">@ViewBag.PendingPayments</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body d-flex flex-column justify-content-center">
                <h5 class="card-title text-center">Canceled Bookings</h5>
                <h3 class="text-center">@ViewBag.CancelledBookings</h3>
            </div>
        </div>
    </div>
</div>
